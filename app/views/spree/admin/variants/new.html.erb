<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @variant } %>


<% if params[:shop_id] != nil %>
<%= form_for [:admin, @shop, @product, @variant] do |f| %>
  <div class="well">
    <fieldset data-hook="admin_variant_new_form">
      <legend><%= Spree.t(:new_variant) %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
  </div>
<% end %>
<% else %>
<%= form_for [:admin, @product, @variant] do |f| %>
  <div class="well">
    <fieldset data-hook="admin_variant_new_form">
      <legend><%= Spree.t(:new_variant) %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
  </div>
<% end %>

<% end %>
