<% content_for :page_title do %>
  <%= link_to Spree.t(:shops), admin_shops_path %> /
  <%= @shop.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_shop_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_shop_url(@shop) %>
    <% end if can?(:admin, Spree::Shop) %>
    <%= content_tag :li, class: ('active' if current == :branches) do %>
      <%= link_to_with_icon 'th-large', Spree.t(:branches), spree.admin_shop_branches_url(@shop) %>
    <% end if can?(:admin, Spree::Branch) %>
    <%= content_tag :li, class: ('active' if current == :products) do %>
      <%= link_to_with_icon 'th-large', Spree.t(:products),  spree.admin_shop_products_url(@shop) %>
    <% end if can?(:admin, Spree::Product) %>	 
    
  </ul>
<% end %>
