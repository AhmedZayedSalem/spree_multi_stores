<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @variant } %>

<%= form_for [@shop, @product, @variant] do |f| %>
  <div class="well">
    <fieldset data-hook="variant_new_form">
      <legend><%= Spree.t(:new_variant) %></legend>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t('actions.create'), 'ok', 'submit', {class: 'btn-success'} %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= button_link_to Spree.t('actions.cancel'), shop_product_variants_url, :icon => 'remove' %>
      </div>
    </fieldset>
  </div>
<% end %>
